<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout android:layout_width="0dp" android:layout_height="0dp"
                  android:orientation="vertical" android:id="@+id/linearLayout"
                  app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_weight="1">

            <EditText
                    tools:ignore="HardcodedText,LabelFor,NestedWeights"
                    android:id="@+id/editText"
                    android:layout_width="match_parent"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:autofillHints=""
                    android:importantForAutofill="no"
                    tools:layout_editor_absoluteX="30dp"
                    tools:layout_editor_absoluteY="16dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            <EditText
                    tools:ignore="HardcodedText,LabelFor"
                    android:id="@+id/EditText"
                    android:layout_width="match_parent"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:autofillHints="" android:importantForAutofill="no"
                    tools:layout_editor_absoluteX="30dp" tools:layout_editor_absoluteY="16dp" android:layout_weight="1"
                    android:layout_height="match_parent"/>
            <Button
                    tools:ignore="HardcodedText"
                    android:text="노티피케이션 발생시키기"
                    android:layout_width="match_parent"
                    android:id="@+id/bt2"
                    tools:layout_editor_absoluteY="117dp" tools:layout_editor_absoluteX="39dp" android:layout_weight="1"
                    android:layout_height="match_parent"/>
        </LinearLayout>
        <Button
                tools:ignore="HardcodedText"
                android:text="노티피케이션 발생시키기"
                android:layout_width="match_parent"
                android:id="@+id/bt"
                tools:layout_editor_absoluteY="117dp" tools:layout_editor_absoluteX="39dp" android:layout_weight="40"
                android:layout_height="wrap_content"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>